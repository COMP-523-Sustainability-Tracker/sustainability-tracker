<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Login" icon="" />

    <FlexboxLayout class = "page"> 
        <StackLayout class="form">

            <Label class = "header" text = "Login" > </Label> 

            <StackLayout class = "input-field"> 
                <Label class = "input" text = "Username"> </Label> 
                <TextField class="input-rounded"  text = "{{ username }}" keyboardType="email" returnKeyType="next" autocorrect="false" autocapitalizationType="none"></TextField>
                <StackLayout class = "hr-light"> </StackLayout>
            </StackLayout>

             <StackLayout class = "input-field"> 
                <Label class = "input" text = "Password"> </Label> 
                <TextField class="input-rounded" text = "{{ password }}" secure = "true" returnKeyType="next" autocorrect="false" autocapitalizationType="none"></TextField>
                <StackLayout class = "hr-light"> </StackLayout>
            </StackLayout>

            <FlexboxLayout flexDirection ="row"> 
                <Button text = "Forgot Password?" tap = "register"> </Button>

                <Button class = "register" text = "Register" tap = "register"> </Button>

            </FlexboxLayout> 


            <Button text = "Login" tap = "dashboard" class = "btn btn-primary"> </Button>
        </StackLayout>
    </FlexboxLayout>

</Page>