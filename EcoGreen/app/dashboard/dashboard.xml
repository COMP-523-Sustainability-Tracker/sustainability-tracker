<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Dashboard" icon="" />

    <FlexboxLayout class = "page"> 
        <StackLayout class="form">

            <StackLayout class = "input-field"> 
               <Label class = "header" text = "Welcome" > </Label> 
               <Label class = "header2" text = "username" > </Label> 
            </StackLayout>

            <FlexboxLayout flexDirection = "row">
                <StackLayout class = "buttonbox">
                    <Button class = "box-button1" text = "Update Account?" tap = "progressBar" textWrap = "true"> </Button>
                </StackLayout>

                <StackLayout class = "buttonbox2">
                    <Button class = "box-button2" text = "Change Password" tap = "register" textWrap = "true"> </Button>
                </StackLayout>

                <StackLayout class = "buttonbox">
                    <Button class = "box-button1" text = "Earned Badges" tap = "register" textWrap = "true"> </Button>
                </StackLayout>
            </FlexboxLayout>
            
             <StackLayout class = "input-field"> 
               <Label class = "header" text = "Overall Progress" > </Label> 
            </StackLayout>

            <GridLayout columns="3*, *" class="progressbar" text= "{{ columns }}">
                <StackLayout col="0" class="progressbar-value" ></StackLayout>
            </GridLayout>

             <StackLayout class = "input-field"> 
               <Label class = "header2" text = "This is the overall progress towards have 0 carbon footprint" textWrap = "true"> </Label> 
            </StackLayout>

            <FlexboxLayout flexDirection = "row">
                <StackLayout class = "buttonbox3">
                    <Button text = "Total Receipts 4" tap = "progressBar" textWrap = "true"> </Button>
                </StackLayout>

                <StackLayout class = "buttonbox4">
                    <Button text = "Total Carbon 10" tap = "register" textWrap = "true"> </Button>
                </StackLayout>

            </FlexboxLayout>

            

           
        </StackLayout>
    </FlexboxLayout>

</Page>